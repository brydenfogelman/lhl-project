                    <label for="first-name-field">First name:</label>               
                    <input type="name" name="firstname" class="form-control" id="first-name-field" placeholder="Enter your first name...">
                </div>
                <div class="form-group">
                    <label for="last-name-field">Last name:</label>               
                    <input type="name" name="lastname" class="form-control" id="last-name-field" placeholder="Enter your last name...">
                </div>
